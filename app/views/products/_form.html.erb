<div class="row">
  <div class="col-lg-12">
    <fieldset>
      <%= form_for product, url:{action: action}, :html => {:class => "form" } do |f| %>
        <h2><%= title %></h2>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Price $" %>
          <%= f.number_field :price, class: "form-control", :value => 0, :min => 0, :step => 0.01 %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :photo_url %><br>
          <%= f.url_field :photo_url, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :inventory, "Number in Stock" %><br>
          <%= f.number_field :inventory, class: "form-control" %><br>
        </div>
        <%= f.hidden_field :merchant_id, :value => merchant_id %>
        <%= f.submit "Save", class: "btn btn-default" %>
      <% end %>
    </fieldset>
  </div>
</div>
