<h5>Order Status: <%= @order.status %></h5>
<% @order.order_items.each do |order_item| %>
<div class="row">
<div class="col-md-2 col-md-offset-3">
  <div class="cart-image-container"><%= link_to image_tag(order_item.product.photo_url,
          class: "cart-image"), product_path(order_item.product.id) %>
  </div>
</div>
<div class="col-md-6">
  <div class="row">
    <div class="col-md-6">
      <h5 class="product-name"><%= order_item.product.name %> from <%= order_item.product.merchant.user_name %></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h5>Quantity: <%= order_item.quantity %></h5>
    </div>
    <div class="col-md-3">
      <!-- <span>$<%= number_with_precision(order_item.product.price, :precision => 2, :delimiter => ',') %></span> -->
      <p>Item Subtotal</p>
      <p>$<%= number_with_precision(order_item.product.price * order_item.quantity, :precision => 2, :delimiter => ',') %></p>
    </div>
  </div>
</div>
</div>
<% end %>
<div class="row">
  <h5>Shipping Method: <%= @order.carrier_name %> $<%= @order.shipping_price/100.00 %></h5>
</div>
<div class="row">
  <h5>Total Cost: $<%= number_with_precision(@subtotal, :precision => 2, :delimiter => ',') %></h5>
</div>
<%= button_to "Submit Order", :action => "confirmation", class: "btn black-button margin-top margin-bottom", data: { confirm: "Are you sure you want to purchase?"} %>
